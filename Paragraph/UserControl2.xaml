<UserControl x:Class="Paragraph.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paragraph"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="NameText" Margin="91,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" FontSize="21"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="81" FontSize="22"/>
        <Label Content="Time:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Height="36" Width="81" FontSize="22"/>
        <TextBox x:Name="TimeText" Margin="91,53,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="21"/>
        <Label Content="Detail:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Height="36" Width="81" FontSize="22"/>
        <RichTextBox x:Name="DetailText" Margin="91,96,10,10" FontSize="18"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="20,0,0,20" Width="58" Height="19" VerticalAlignment="Bottom" Click="DeleteButton_Click"/>
    </Grid>
</UserControl>
